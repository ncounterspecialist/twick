{
  "name": "@twick/browser-render",
  "version": "0.15.0",
  "license": "https://github.com/ncounterspecialist/twick/blob/main/LICENSE.md",
  "description": "Browser-native video rendering for Twick using WebCodecs API",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./vite-plugin-ffmpeg": {
      "types": "./dist/vite-plugin-ffmpeg.d.ts",
      "import": "./dist/vite-plugin-ffmpeg.mjs",
      "require": "./dist/vite-plugin-ffmpeg.js"
    }
  },
  "files": [
    "dist",
    "public",
    "scripts"
  ],
  "scripts": {
    "build": "tsup && node scripts/copy-wasm.js",
    "dev": "tsup --watch",
    "test:browser": "tsx src/test-browser-render.ts",
    "clean": "rimraf dist",
    "docs": "typedoc"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@twick/core": "^0.15.0",
    "@twick/media-utils": "workspace:*",
    "@twick/visualizer": "workspace:*",
    "mediabunny": "^1.31.0",
    "mp4-wasm": "^1.0.6",
    "mp4box": "^0.5.2",
    "@twick/ffmpeg-web": "workspace:*",
    "@ffmpeg/util": "^0.12.1",
    "@ffmpeg/core": "^0.12.6"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "5.4.2",
    "typedoc": "^0.25.8",
    "typedoc-plugin-markdown": "^3.17.1",
    "vite": "^6.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
