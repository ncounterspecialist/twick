{
  "name": "@twick/cloud-file-uploader",
  "version": "0.1.0",
  "description": "Twick cloud function for generating pre-signed S3 URLs for direct file uploads",
  "type": "module",
  "main": "core/index.js",
  "exports": {
    ".": "./core/index.js",
    "./aws": "./platform/aws/handler.js",
    "./platform/aws/*": "./platform/aws/*"
  },
  "bin": {
    "twick-file-uploader": "bin/twick-file-uploader.js"
  },
  "files": [
    "core",
    "core/index.js",
    "platform",
    "bin",
    "README.md"
  ],
  "scripts": {
    "test": "node --test test/*.test.js",
    "verify:aws": "node -e \"require('fs').accessSync('platform/aws/Dockerfile'); require('fs').accessSync('platform/aws/handler.js'); console.log('AWS file-uploader function assets present')\"",
    "pack:aws": "npm run verify:aws && npm pack",
    "release:aws": "npm run verify:aws && npm publish --access public --tag aws",
    "deploy:aws": "node scripts/deploy-aws.js",
    "prepublishOnly": "npm run verify:aws"
  },
  "publishConfig": {
    "access": "public",
    "tag": "aws"
  },
  "keywords": [
    "twick",
    "s3",
    "presigned-url",
    "file-upload",
    "upload",
    "lambda",
    "aws",
    "docker"
  ],
  "author": "",
  "license": "https://github.com/ncounterspecialist/twick/blob/main/LICENSE.md",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.620.0",
    "@aws-sdk/s3-request-presigner": "^3.620.0"
  },
  "devDependencies": {
    "typescript": "~5.4.5",
    "dotenv": "^16.4.5"
  }
}
